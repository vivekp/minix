diff -ru nbsdsrc/src/bin/echo/echo.c bin/echo/echo.c
--- nbsdsrc/src/bin/echo/echo.c
+++ bin/echo/echo.c
@@ -56,20 +56,73 @@
 main(int argc, char *argv[])
 {
 	int nflag;
-
+#ifdef __minix
+	int eflag;
+#endif
 	setprogname(argv[0]);
 	(void)setlocale(LC_ALL, "");
 
+#ifdef __minix
+	if (*++argv && !strcmp(*argv, "--")) {
+		++argv;	
+	}
+#endif
+
 	/* This utility may NOT do getopt(3) option parsing. */
+#ifdef __minix
+	/* We have already incremented argv when comparing with '--'. */	
+	if (*argv && !strcmp(*argv, "-n")) {
+#else
 	if (*++argv && !strcmp(*argv, "-n")) {
+#endif
 		++argv;
 		nflag = 1;
 	}
 	else
 		nflag = 0;
 
+#ifdef __minix
+	if (*argv && !strcmp(*argv, "-e")) {
+		++argv;
+		eflag = 1;
+	}
+	else
+		eflag = 0;
+#endif
+
 	while (*argv) {
+#ifdef __minix
+		char *p = *argv;
+		char c;
+		while ((c = *p++) != '\0') {
+			if (c == '\\' && eflag) {
+				switch (*p++) {
+					case 'a':  c = '\a';  break;
+					case 'b':  c = '\b';  break;
+					case 'c':  return 0;		/* exit */
+					case 'e':  c = '\033';  break;
+					case 'f':  c = '\f';  break;
+					case 'n':  c = '\n';  break;
+					case 'r':  c = '\r';  break;
+					case 't':  c = '\t';  break;
+					case 'v':  c = '\v';  break;
+					case '\\':  break;		/* c = '\\' */
+					case '0':
+						c = 0;
+						int count = 3;
+						while (--count >= 0 && (unsigned)(*p - '0') < 8)
+							c = (c << 3) + (*p++ - '0');
+						break;
+					default:
+						p--;
+						break;
+				}
+			}
+			putchar(c);
+		}	
+#else
 		(void)printf("%s", *argv);
+#endif
 		if (*++argv)
 			(void)putchar(' ');
 	}
